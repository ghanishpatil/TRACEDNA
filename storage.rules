rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is an analyst
    function isAnalyst() {
      return isAuthenticated() && 
             firestore.exists(/databases/(default)/documents/analysts/$(request.auth.uid)) &&
             firestore.get(/databases/(default)/documents/analysts/$(request.auth.uid)).data.role == 'analyst';
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             firestore.exists(/databases/(default)/documents/analysts/$(request.auth.uid)) &&
             firestore.get(/databases/(default)/documents/analysts/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Threat attachments - only analysts can access
    match /threats/{threatId}/{allPaths=**} {
      allow read, write: if isAnalyst();
    }
    
    // Case evidence - only analysts can access
    match /cases/{caseId}/{allPaths=**} {
      allow read, write: if isAnalyst();
    }
    
    // TSDNA data - only analysts can access
    match /tsdna/{tsdnaId}/{allPaths=**} {
      allow read, write: if isAnalyst();
    }
    
    // Exports - only analysts can access
    match /exports/{exportId}/{allPaths=**} {
      allow read, write: if isAnalyst();
    }
    
    // System files - only admins can access
    match /system/{allPaths=**} {
      allow read, write: if isAdmin();
    }
    
    // User uploads - users can manage their own files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Temporary files - authenticated users can create, analysts can read
    match /temp/{allPaths=**} {
      allow create: if isAuthenticated();
      allow read, write: if isAnalyst();
    }
    
    // Default rule - deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
